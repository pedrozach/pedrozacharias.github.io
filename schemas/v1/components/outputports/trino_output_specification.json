{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "catalog": {
        "type": "string"
      },
      "schema": {
        "type": "string"
      },
      "tables": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "endpoint": {
        "type": "string"
      },
      "port": {
        "type": "integer"
      },
      "authType": {
        "type": "string",
        "pattern": "(?i)^(kerberos|ldap|none)$"
      }
    },
    "required": [
      "catalog",
      "schema",
      "tables",
      "endpoint",
      "port",
      "authType"
    ]
  }